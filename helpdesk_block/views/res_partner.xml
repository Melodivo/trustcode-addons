<odoo>
    <record id="view_res_partner_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="barcode" position="after"/>
            <notebook position="inside">
                <page string="Informações Complementares">
                    <group>
                        <group>
                            <field name="estrategia"/>
                            <field name="perfil_suporte_id" />
                            <field name="br_account_cnae_id" />
                            <field name="plataforma_id"/>
                        </group>
                        <group>
                            <field name="equipamento_ids" widget="many2many_tags" />
                            <field name="segmento_ids" widget="many2many_tags" />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <record id="action_partner_segment_contact" model="ir.actions.act_window">
        <field name="name">Segmento</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.segment</field>
        <field name="view_mode">activity,kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
        </field>
    </record>

    <record id="action_partner_platform_contact" model="ir.actions.act_window">
        <field name="name">Plataforma</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.platform</field>
        <field name="view_mode">activity,kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
        </field>
    </record>

    <record id="action_partner_support_contact" model="ir.actions.act_window">
        <field name="name">Perfil do Suporte</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.support</field>
        <field name="view_mode">activity,kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
        </field>
    </record>

    <menuitem id="menu_partner_segment_contact"
        action="action_partner_segment_contact"
        name="Segmento" parent="contacts.res_partner_menu_config"
        sequence="7"/>
    <menuitem id="menu_partner_platform_contact"
        action="action_partner_platform_contact"
        name="Plataforma" parent="contacts.res_partner_menu_config"
        sequence="7"/>
    <menuitem id="menu_partner_support_contact"
        action="action_partner_support_contact"
        name="Perfil do Suporte" parent="contacts.res_partner_menu_config"
        sequence="7"/>
</odoo> 
