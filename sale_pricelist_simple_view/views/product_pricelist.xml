        <record id="simple_view_product_pricelist_item_form_view" model="ir.ui.view">
            <field name="name">simple.view.product.pricelist.item.form</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
            <field name="arch" type="xml">
                <field name="categ_id" position="before">
                    <field name="fiscal_category" attrs="{
                          'invisible':[('applied_on', '!=', '4_fiscal_category')],
                          'required':[('applied_on', '=', '4_fiscal_category')]}"
