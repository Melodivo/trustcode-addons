<odoo>
    <record id="view_product_template_attribute_value_form" model="ir.ui.view" >
        <field name="model">product.template.attribute.value</field>
        <field name="inherit_id" ref="product.product_template_attribute_value_view_form" />
        <field name="arch" type="xml">
            <field name="price_extra" position="after">
                <label for="value_price_ids"></label>
                <field name="value_price_ids" widget="one2many" nolabel="1">
                    <tree editable="bottom">
                        <field name="min_quantity" />
                        <field name="fixed_price" />
                    </tree>
                </field>
            </field>
        </field>
    </record>
</odoo>
